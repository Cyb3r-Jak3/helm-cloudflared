{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "additionalProperties": true,
    "description": "Cyb3r-Jak3's Cloudflared Helm chart",
    "properties": {
        "affinity": {
            "properties": {},
            "type": "object"
        },
        "autoscaling": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "maxReplicas": {
                    "type": "integer"
                },
                "minReplicas": {
                    "type": "integer"
                },
                "targetCPUUtilizationPercentage": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "cloudflare": {
            "properties": {
                "existingSecret": {
                    "default": "",
                    "description": "The name of an existing secret to use for the tunnel token",
                    "type": [
                        "string"
                    ]
                },
                "existingSecretKey": {
                    "default": "",
                    "description": "The key in the existing secret to use for the tunnel token",
                    "type": [
                        "string"
                    ]
                },
                "extraArgs": {
                    "default": [],
                    "description": "Extra arguments to pass to cloudflared",
                    "type": [
                        "array"
                    ]
                },
                "tunnel_token": {
                    "default": "",
                    "description": "The tunnel token for Cloudflare",
                    "type": [
                        "string"
                    ]
                }
            },
            "type": "object"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "image": {
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": [
                        "string"
                    ]
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "default": "",
                    "description": "The image tag to pull. Defaults to app version",
                    "type": [
                        "string"
                    ]
                }
            },
            "type": "object"
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "livenessProbe": {
            "properties": {
                "httpGet": {
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "port": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "metrics": {
            "properties": {
                "enabled": {
                    "default": true,
                    "description": "Enable Prometheus metrics",
                    "type": [
                        "boolean"
                    ]
                },
                "port": {
                    "default": 8080,
                    "description": "Port to expose Prometheus metrics on",
                    "type": [
                        "integer"
                    ]
                }
            },
            "type": [
                "object"
            ]
        },
        "nameOverride": {
            "type": "string"
        },
        "nodeSelector": {
            "properties": {},
            "type": "object"
        },
        "podAnnotations": {
            "properties": {},
            "type": "object"
        },
        "podLabels": {
            "properties": {},
            "type": "object"
        },
        "podSecurityContext": {
            "properties": {
                "fsGroup": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "replicaCount": {
            "default": 2,
            "type": [
                "integer"
            ]
        },
        "resources": {
            "properties": {},
            "type": "object"
        },
        "securityContext": {
            "properties": {
                "capabilities": {
                    "properties": {
                        "drop": {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "readOnlyRootFilesystem": {
                    "type": "boolean"
                },
                "runAsNonRoot": {
                    "type": "boolean"
                },
                "runAsUser": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "serviceAccount": {
            "properties": {
                "annotations": {
                    "properties": {},
                    "type": "object"
                },
                "automount": {
                    "type": "boolean"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "tolerations": {
            "type": "array"
        },
        "volumeMounts": {
            "type": "array"
        },
        "volumes": {
            "type": "array"
        }
    },
    "title": "Cloudflared",
    "type": "object"
}
